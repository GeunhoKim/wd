@import '../node_modules/bootstrap/dist/css/bootstrap.css'
@import '../node_modules/font-awesome/css/font-awesome.css'
@import './variables.styl'
@import url(https://fonts.googleapis.com/css?family=Roboto:400,700,400italic)
@import url(https://fonts.googleapis.com/css?family=Signika:400,300)
@font-face {
  font-family: 'jeongum_local'
  src: url('assets/Jeongum.woff') format('woff')
  src: url('assets/Jeongum.woff2') format('woff2')
}

/* Tags */

body {
  color: $text-color
  background: #fff
  font-family: 'jeongum_local', jeongum_local
  font-size: 14.5px
}

a {
  color: $link-color
}

h1,
h2,
h3,
h4 {
  font-family: 'jeongum_local', jeongum_local
}

.navbar-brand {
  font-family: 'jeongum_local', jeongum_local
  font-size: 25px
  letter-spacing: 1.5px
  line-height: 0.8em
  margin-top: 0px
  top: -5px
}


input[type="text"], textarea {
  outline: none
  box-shadow: none !important
}

/* Classes */

.page-header {
  margin-top: 0
  border-color: $border-color
  color: #aaa
}

.btn {
  font-family: 'jeongum_local', jeongum_local
}

.panel {
  border-color: $border-color
  -webkit-box-shadow: 0 0 0 rgba(0, 0, 0, 0)
  box-shadow: 0 0 0 rgba(0, 0, 0, 0)
  h3 {
    margin-top: 0
  }
  .panel-body > h2 {
    margin-top: 0
  }
}

.input-group-addon {
  background-color: #fff
  border-color: $border-color
  border-top-width: 0
  border-bottom-width: 0
  border-right-width: 0
  border-radius: 0
  padding-right: 0
}
